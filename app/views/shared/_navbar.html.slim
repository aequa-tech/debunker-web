header.navbar
  .container-fluid
    .navbar-brand
      = link_to "Debunker Assistant", root_path, class: "navbar-item"
    .navbar-menu
      .navbar-end
        - if user_signed_in? && request.path == root_path
          .navbar-item
            = link_to I18n.t('navigation.dashboard'), user_root_path, class: "button-secondary"
        - elsif user_signed_in?
          .navbar-item
            = link_to "#{current_user.email}", user_root_path
        - else
          .navbar-item
            = link_to I18n.t('devise.links.sign_up'), new_user_registration_path
          .navbar-item
            = link_to I18n.t('devise.links.sign_in'), new_user_session_path, class: "button-primary"
